
<!--pages/paidui/paidui.wxml-->
<view class="page">
    <view class="page__hd">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="user-motto">{{paidui}}</text>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <!--<view class="page__title">Grid</view>
      <view class="page__desc">九宫格</view>-->
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for-items="{{grids}}" wx:key="{{index}}">
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../../image/play.png" />
                    <view class="weui-grid__label">ICBC</view>
                </navigator>
            </block>
        </view>
    </view>
</view>
